[user]
	name = loic lefloch
	email = l.lefloch.91@gmail.com

[color]
  ui = auto

[alias]
  st = status
  co = commit
  lg = log --graph --pretty=tformat:'%Cred%h%Creset %d%Creset %s %Cgreen(%an %ar)%Creset'
  pu = push origin master

[core]
  pager = cat
  whitespace = -trailing-space

[diff]
  mnemonicPrefix = true
  wordRegex = .

[fetch]
  recurseSubmodules = on-demand

[grep]
  extendedRegexp = true

[log]
  abbrevCommit = true

[merge]
  conflictStyle = diff3

[mergetool]
  keepBackup = false
  keepTemporaries = false
  prompt = false

[pull]
# This is GREATâ€¦ when you know what you're doing and are careful
# not to pull --no-rebase over a local line containing a true merge.
# rebase = true
# WARNING! This option, which does away with the one gotcha of
# auto-rebasing on pulls, is only available from 1.8.5 onwards.
#rebase = preserve

[push]
  default = upstream

[rerere]
  # If you like rerere, decomment these
  # autoupdate = true
  # enabled = true
[status]
  submoduleSummary = true
